#!/bin/sh
# This script is only used for developement. It is removed by the
# distribution process.

set -e

OCAMLBUILD=${OCAMLBUILD:="ocamlbuild -tag debug -tag annot -classic-display \
                          -use-ocamlfind"}

action ()
{
    case $1 in
      default)      $OCAMLBUILD $* ;;
      apiquery)     $OCAMLBUILD apiquery.native ;;
      support)      action apiquery
                    check_reg
                    ./apiquery.native -mli -api gl3.3 > src/tgl3.mli
                    ./apiquery.native -ml -api gl3.3 > src/tgl3.ml
                    ./apiquery.native -mli -api gl4.4 > src/tgl4.mli
                    ./apiquery.native -ml -api gl4.4 > src/tgl4.ml
                    ./apiquery.native -mli -api gles2.0 > src/tgles2.mli
                    ./apiquery.native -ml -api gles2.0 > src/tgles2.ml
                    ./apiquery.native -mli -api gles3.0 > src/tgles3.mli
                    ./apiquery.native -ml -api gles3.0 > src/tgles3.ml
                    ./apiquery.native -mli -api glx1.4 support/glx.xml > src/tglx1.mli
                    ./apiquery.native -ml -api glx1.4 support/glx.xml > src/tglx1.ml
                    ;;
      tgls)         $OCAMLBUILD \
                    tgl3.cmxa dlltgl3.so \
                    tgl4.cmxa dlltgl4.so \
                    tgles2.cmxa dlltgles2.so \
                    tgles3.cmxa dlltgles3.so \
                    tglx1.cmxa dlltglx1.so
                    ;;
      doc)          shift; pkg-doc $* doc/api-dev.docdir ;;
      clean)        $OCAMLBUILD -clean
                    rm -f src/tgl3.mli src/tgl3.ml src/tgl4.mli src/tgl4.ml \
                          src/tgles2.mli src/tgles2.ml src/tgles3.mli \
                          src/tgles3.ml src/tglx1.ml
                    ;;
      *)            $OCAMLBUILD $* ;;
    esac
}

check_reg ()
{
    for file in gl glx; do
        if [ ! -f "support/$file.xml" ]; then
            echo "Missing file support/$file.xml, see DEVEL.md"
            exit 1
        fi
    done
}

if [ $# -eq 0 ];
then action default ;
else action $*; fi
